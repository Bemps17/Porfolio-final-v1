# Variables d'environnement
NODE_ENV=development

# Product Hunt API
PRODUCT_HUNT_TOKEN=YOUR_TOKEN_HERE

# NewsAPI (https://newsapi.org)
NEWS_API_TOKEN=YOUR_TOKEN_HERE

# Guardian API (https://open-platform.theguardian.com)
GUARDIAN_TOKEN=YOUR_TOKEN_HERE

# New York Times API (https://developer.nytimes.com)
NYT_TOKEN=YOUR_TOKEN_HERE

# Behance API (https://www.behance.net/dev)
BEHANCE_TOKEN=YOUR_TOKEN_HERE

# GitHub API (optionnel - pour plus de requÃªtes)
GITHUB_TOKEN=YOUR_TOKEN_HERE

# Configuration de sortie
OUTPUT_FORMAT=both
OUTPUT_FOLDER=../blog-data
MAX_ARTICLES_PER_FEED=15

# Cron (pour automatisation)
CRON_SCHEDULE=0 */6 * * *

# Options de filtrage
ENABLE_DEDUPLICATION=true
FILTER_FRENCH=false
MIN_CONTENT_LENGTH=100

# Logging
LOG_LEVEL=info
